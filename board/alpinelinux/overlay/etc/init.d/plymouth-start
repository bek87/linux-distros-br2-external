depend() {
	need udev-trigger
	after udev-trigger
}

start() {
	ebegin "Plymouth: show boot screen"
	plymouthd --mode=boot --pid-file=/var/run/plymouthd.pid --attach-to-session
	plymouth show-splash
	eend $?
}
